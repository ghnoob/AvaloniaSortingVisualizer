{
   "tasks": [
      {
         "name": "Format",
         "command": "dotnet",
         "args": [ "format", "--include", "${staged}" ],
         "include": [ "**/*.cs", "**/*.csproj" ]
      },
      {
       "name": "Run csharpier",
       "command": "dotnet",
       "args": [ "csharpier", "${staged}" ],
       "include": [ "**/*.cs" ]
      }
   ]
}